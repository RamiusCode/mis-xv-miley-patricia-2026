---
// HeroXV.astro - Sección principal Mis XV Años
// Solo Tailwind, sin CSS custom
---

<section class="relative text-black w-full overflow-x-hidden">
    <!-- ====== FLORES ARRIBA ====== -->
    <div class="relative w-full overflow-hidden" id="flores-arriba">
        <img
            src="/imagenes/FloresArriba.png"
            alt="Flores decorativas"
            class="w-full h-auto object-cover object-center block"
        />

        <!-- CORONA centrada sobre las flores -->
        <div
            class="absolute left-1/2 -translate-x-1/2 top-[50px] sm:top-16 md:top-12 lg:top-8 xl:top-4 z-50"
            id="corona"
        >
            <img
                src="/imagenes/Corona.webp"
                alt="Corona de quinceañera"
                class="w-24 h-auto sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-32 lg:h-32 xl:w-36 xl:h-36 object-contain mx-auto"
            />
        </div>
    </div>

    <!-- ====== CONTENIDO PRINCIPAL ====== -->
    <div class="relative w-full -mt-26 sm:-mt-24 md:-mt-32 overflow-hidden">
        <div class="flex justify-center w-full">
            <div class="text-center z-10 max-w-4xl w-full">
                <!-- TÍTULO CURVO con SVG -->
                <div
                    class="relative text-center z-30 mb-4 w-full"
                    id="titulo-container"
                >
                    <svg
                        viewBox="0 0 400 140"
                        class="w-64 sm:w-72 md:w-80 lg:w-96 xl:w-[420px] mx-auto"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <defs>
                            <path
                                id="curva-titulo"
                                d="M 15,130 Q 200,-10 385,130"></path>
                        </defs>

                        <!-- EL GRAN DÍA LLEGÓ -->
                        <text
                            font-family="'Crimson Text', serif"
                            font-size="28"
                            font-weight="700"
                            fill="#eb8fa3"
                            letter-spacing="4"
                        >
                            <textPath
                                href="#curva-titulo"
                                startOffset="50%"
                                text-anchor="middle"
                            >
                                EL GRAN DÍA LLEGÓ
                            </textPath>
                        </text>
                    </svg>
                </div>

                <!-- NOMBRE -->
                <div
                    class="flex items-center justify-center mb-2 w-full"
                    id="nombre-container"
                >
                    <h2
                        class="font-great-vibes text-5xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl text-[#D4AF37] tracking-wide"
                        id="nombre-typewriter"
                    >
                        Miley Patricia
                    </h2>
                </div>

                <!-- FOTO CON FLORES LATERALES -->
                <div
                    class="relative w-full overflow-visible"
                    id="foto-container"
                >
                    <!-- Flores izquierda -->
                    <div
                        id="flores-foto-izq"
                        class="absolute -left-4 sm:left-0 top-32 sm:top-24 md:top-20 lg:top-16 flex-shrink-0 z-30"
                    >
                        <img
                            src="/imagenes/FlorLateral.webp"
                            alt="Flores izquierda"
                            class="w-12 h-auto sm:w-24 md:w-32 lg:w-40 object-contain"
                        />
                    </div>

                    <!-- Flores derecha -->
                    <div
                        id="flores-foto-der"
                        class="absolute -right-4 sm:right-0 top-32 sm:top-24 md:top-20 lg:top-16 flex-shrink-0 z-30"
                    >
                        <img
                            src="/imagenes/FlorLateral.webp"
                            alt="Flores derecha"
                            class="w-12 h-auto sm:w-24 md:w-32 lg:w-40 object-contain scale-x-[-1]"
                        />
                    </div>

                    <!-- Imagen quinceañera -->
                    <div class="relative flex justify-center -translate-x-4">
                        <img
                            src="/imagenes/xv.webp"
                            alt="Foto de quinceañera"
                            class="w-[400px] h-auto object-contain"
                            id="foto-quinceañera"
                        />
                    </div>

                    <div class="w-full">
                        <img
                            src="/imagenes/cadena.png"
                            alt="Cadena"
                            class="w-full h-auto block"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    import { gsap } from "gsap";

    document.addEventListener("DOMContentLoaded", () => {
        // Estado inicial de cada elemento
        gsap.set("#corona", { opacity: 0, scale: 0.3, y: -30 });
        gsap.set("#titulo-container", { opacity: 0, y: -20 });
        gsap.set("#nombre-container", {
            opacity: 0,
            y: 30,
            filter: "blur(8px)",
        });
        gsap.set("#foto-quinceañera", { opacity: 0, y: 60, scale: 0.9 });
        gsap.set("#flores-foto-izq", { opacity: 0, x: -80, rotate: -10 });
        gsap.set("#flores-foto-der", { opacity: 0, x: 80, rotate: 10 });

        const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

        // Corona cae desde arriba con rebote elástico
        tl.to(
            "#corona",
            {
                opacity: 1,
                scale: 1,
                y: 0,
                duration: 1.4,
                ease: "elastic.out(1, 0.6)",
            },
            0,
        )

            // Título curvo fade desde arriba
            .to(
                "#titulo-container",
                {
                    opacity: 1,
                    y: 0,
                    duration: 1.2,
                },
                0.2,
            )

            // Nombre: desenfoque → nitidez (efecto cinematográfico)
            .to(
                "#nombre-container",
                {
                    opacity: 1,
                    y: 0,
                    filter: "blur(0px)",
                    duration: 1.4,
                    ease: "power2.out",
                },
                0.3,
            )

            // Flores entran desde los lados con giro suave
            .to(
                "#flores-foto-izq",
                {
                    opacity: 1,
                    x: 0,
                    rotate: 0,
                    duration: 1.3,
                    ease: "back.out(1.4)",
                },
                0.4,
            )
            .to(
                "#flores-foto-der",
                {
                    opacity: 1,
                    x: 0,
                    rotate: 0,
                    duration: 1.3,
                    ease: "back.out(1.4)",
                },
                0.4,
            )

            // Imagen sube suavemente desde abajo
            .to(
                "#foto-quinceañera",
                {
                    opacity: 1,
                    y: 0,
                    scale: 1,
                    duration: 1.5,
                    ease: "power2.out",
                },
                0.5,
            );
    });
</script>
